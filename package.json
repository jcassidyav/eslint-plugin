{
  "name": "@avaeon/eslint-plugin",
  "version": "1.0.0",
  "description": "A set of ESLint rules for NativeScript projects.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "NativeScript",
    "eslint-plugin",
    "eslint"
  ],
  "author": {
    "name": "Jason Cassidy"
  },
  "contributors": [
    "Stanimira Vlaeva <stanimira.vlaeva@gmail.com>",
    "NativeScript TSC <oss@nativescript.org>"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/NativeScript/eslint-plugin.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "npm run lint:src",
    "lint:src": "eslint src",
    "lint:test": "eslint test",
    "lint:src:fix": "eslint src --fix",
    "lint:test:fix": "eslint test --fix",
    "lint:fix": "npm run lint:src:fix",
    "test": "jest",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --coverage false",
    "prettier": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "prepublishOnly": "npm run build && npm run lint",
    "prepare": "husky",
    "clean": "rm -Rf dist node_modules reports package-lock.json && npm i"
  },
  "dependencies": {
    "@typescript-eslint/parser": "~8.3.0",
    "@typescript-eslint/utils": "~8.3.0"
  },
  "peerDependencies": {
    "eslint": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/eslint": "~9.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "~8.3.0",
    "@typescript-eslint/types": "~8.3.0",
    "@typescript-eslint/typescript-estree": "~8.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-visualstudio": "^8.40.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint": "^9.9.1",
    "husky": "^9.0.1",
    "jest": "^29.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "~29.2.5",
    "typescript": "~5.0.2",
    "typescript-eslint": "^8.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**"
    ],
    "coverageDirectory": "<rootDir>/reports/coverage",
    "transform": {
      "\\.(ts)$": "ts-jest"
    },
    "testRegex": "/test/.*\\.spec\\.ts$",
    "preset": "ts-jest",
    "testMatch": null
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "git add"
    ],
    "*.{json,md,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
